<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.questoes.PaginaQuestaoHorizontalMainActivity"
    >
   
	<com.example.questoes_scroll_horizontal.Pager  android:id="@+id/scrollView"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_weight="1.0">
	</com.example.questoes_scroll_horizontal.Pager>
	<com.example.questoes_scroll_horizontal.PageIndicator android:id="@+id/indicator" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"/>
</LinearLayout>